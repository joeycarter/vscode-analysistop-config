{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "AnalysisTop Config",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "comments": {
			"begin": "(^\\s+)?(?<=^|\\W)(?<!-)(?=#)(?!#{)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.whitespace.comment.leading.topconfig"
				}
			},
			"end": "(?!\\G)",
			"patterns": [
				{
					"begin": "#",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.topconfig"
						}
					},
					"end": "$",
					"name": "comment.line.number-sign.topconfig"
				}
			]
		},
        "keywords": {
            "patterns": [{
                "name": "keyword.control.topconfig",
                "match": "\\b(SUB|SELECTION)\\b"
            }]
        },
        "strings": {
            "name": "string.quoted.double.topconfig",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.topconfig",
                    "match": "\\\\."
                }
            ]
        }
    },
    "scopeName": "source.topconfig"
}
